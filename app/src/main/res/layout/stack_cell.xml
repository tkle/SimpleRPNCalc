<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2">

    <TextView
        android:id="@+id/stackIndexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text=":1"
        android:textSize="@dimen/stack_position_textview_text_size" />

    <TextView
        android:id="@+id/stackValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal|end"
        android:enabled="true"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/stack_value_textview_text_size"
        android:textStyle="bold" />

</GridLayout>

